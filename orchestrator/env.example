# Preview Host Environment Configuration
# Copy this file to .env and update values as needed

# Basic Configuration
PORT=8080
PREVIEW_AUTH_TOKEN=test-token

# Directory Configuration
BOILERPLATE_DIR=/Users/chetankumar/opensource/earnkit-assignment/minidev-boilerplate
PREVIEWS_ROOT=/Users/chetankumar/opensource/earnkit-assignment/minidev-preview-host/previews
PNPM_STORE_DIR=/Users/chetankumar/opensource/earnkit-assignment/minidev-preview-host/.pnpm-store
BASE_PORT=4000

# Deployment Feature Flags (set to true to enable)
ENABLE_VERCEL_DEPLOYMENT=false
ENABLE_NETLIFY_DEPLOYMENT=false
ENABLE_CONTRACT_DEPLOYMENT=true

# Return deployment errors instead of falling back to local deployment
# Set to true to enable LLM error feedback loop in miniapp-creator
RETURN_DEPLOYMENT_ERRORS=true

# External Deployment Tokens (only needed if deployments enabled)
DEPLOYMENT_TOKEN_SECRET=your-vercel-token-here
NETLIFY_TOKEN=your-netlify-token-here

# Vercel Team/Organization (optional - use if deploying to a team)
# This ensures domains are added to the correct Vercel account
# VERCEL_TEAM_ID=team_abc123xyz
# VERCEL_ORG_ID=team_abc123xyz

# Custom Domain Configuration
ENABLE_CUSTOM_DOMAINS=true
CUSTOM_DOMAIN_BASE=minidev.fun

# Contract Deployment Configuration (only needed if contract deployment enabled)
PRIVATE_KEY=your-private-key-with-base-sepolia-eth
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Base Mainnet Configuration (for production deployments)
BASE_NETWORK=base  # Set to "base" for mainnet, "baseSepolia" for testnet (default: base)
BASE_RPC_URL=https://mainnet.base.org
BASESCAN_API_KEY=your-basescan-api-key-for-verification
